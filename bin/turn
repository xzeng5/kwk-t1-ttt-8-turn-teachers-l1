#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"

display_board(board)
turn(board)
user_input = gets.strip

index = input_to_index(user_input)

position_taken?(board, index)

if valid_move?(board, index) == true
  move(board, index, value = "X")
  display_board(board)
else
  turn(board)
end
